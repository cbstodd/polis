<%= provide(:title, 'Users') %>

<h1>All Users</h1>

<div class="row">
  <div class="col-lg-12">
    <%= will_paginate %>
  </div>
</div>

<% @users.each do |user| %>
  <div class="col-lg-3 col-md-3 col-sm-3">
    <div class="row">
      <div class="panel panel-primary">
        <div class="panel-heading"><%= link_to user.username, '#', class: 'users-link' %></div>
          <div class="panel-body">
            <%= link_to gravatar_for(user), user_path(user) %>
          </div>
          <% if current_user.admin? %>
            <%= link_to 'Delete', user, class: 'btn btn-danger',
                                        method: :delete,
                                        data: { confirm: "Are you sure you want to delete this user?" }%>

            <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <%= will_paginate %>
  </div>
</div>





