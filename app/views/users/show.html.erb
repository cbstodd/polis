<%= provide(:title, @user.username) %>


<div class="row">
  <div class="col-lg-3">
      <%= gravatar_for(@user) %>
    <h1><%= @user.username %></h1>

    <p><%= @user.email %></p>
  </div>

  <div class="col-lg-9">
    <h1>
      <%= @user.username %>'s events
      <% if @user.eventposts.any? %>
          (<%= @user.eventposts.count %>)
    </h1>
      <ul class="eventposts">
        <%= render @eventposts %>
      </ul>

  </div>
</div>

        <div class="row">
          <%= will_paginate @eventposts %>
        </div>
      <% end %>


