<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= eventpost.title %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-2">
        <%= link_to gravatar_for(eventpost.user), user_path(eventpost.user) %> <br>
        <div class="event-post-username">
          <%= eventpost.user.username %>
        </div>
      </div>
      <div class="col-lg-10">
        <%= eventpost.content %>
      </div>
    </div>
  </div>
  <div class="panel-footer">Posted <%= time_ago_in_words(eventpost.created_at) %> ago.</div>
</div>


