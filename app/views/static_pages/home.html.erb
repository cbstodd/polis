<% provide(:title, '') %>

<% if logged_in? %>

  <div class="row">
    <div class="col-lg-4">
      <p><%= render 'shared/user_info' %></p>
      <p><%= render 'shared/eventpost_form' %></p>
    </div>

    <div class="col-lg-8">
      <h3>Event feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="jumbotron">
	<div class="container">
      <h1>Polis</h1>
      <h3>Welcome to <span class="text-muted">Anna</span>Polis!</h3>
		<p>Your Annapolitan plans for the weekend. Your one stop place to see, share, and connect with the awesomeness of Annapolis, MD.</p>
		<p>
			<%= link_to 'Sign up!', signup_path, class:'btn btn-primary' %>
		</p>
	</div>
</div>

<% end %>